<Page x:Class="SQL_Injection_Playground.View.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SQL_Injection_Playground.View"
      mc:Ignorable="d" 
      d:DesignHeight="434" d:DesignWidth="620"
      Title="StartPage"
      Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
    
    <Grid>
        <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="25" Foreground="Black" Margin="55,50,55,0" Text="Please start your XAMPP and the associated &quot;MySQL&quot; (to be found in the 2nd column)!" TextAlignment="Center"/>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" FontSize="25" Foreground="Black" Margin="55,180,55,0" Text="When this is done, please press &quot;Login&quot;." TextAlignment="Center"/>
        <Button x:Name="Bttn_DatabaseLogin" Content="Login" Margin="100,0,100,50" FontSize="30" VerticalAlignment="Bottom" Height="44" Click="Bttn_DatabaseLogin_Click"/>
    </Grid>
</Page>
